// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
  includeRelationFields="false"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Patients{
  P_ID String @id
  P_First_Name String
  P_Last_Name String
  P_Marital_Status String
  P_Email String
  P_Password String
  P_Address String
  P_DOB DateTime
  P_Emergency_Contact String
  P_Habits String
  phones Patient_Phone[]
  notifications Notfications[]
  medicalHistory medical[]
  Doctors Doctors[] @relation("doctor_patient")
}


model Patient_Phone{
  P_phone String
  P_ID String
  patient Patients @relation(fields: [P_ID],references: [P_ID])
  @@id([P_phone,P_ID])
}

model Doctors{
  Doc_ID String @id
  Doc_First_Name String
  Doc_Last_Name String
  Doc_Email String
  Doc_Password String
  Doc_Address String
  phones Doctor_Phone[]
  notifications Notfications[]
  Patients Patients[] @relation("doctor_patient")
}

model Doctor_Phone{
  Doc_Phone String
  Doc_ID String
  doctor Doctors @relation(fields: [Doc_ID],references: [Doc_ID])
  @@id([Doc_Phone,Doc_ID])
}

model Notfications{
  Not_ID Int @id @default(autoincrement())
  P_ID String
  Doc_ID String
  Status String
  patient Patients @relation(fields: [P_ID],references: [P_ID])
  doctor Doctors @relation(fields: [Doc_ID],references: [Doc_ID])
}

model Admins{
  Adm_ID Int @id @default(autoincrement()) 
  Adm_First_Name String
  Adm_Last_Name String
  Adm_Email String
  Adm_Password String
}

model medical{
  Med_ID Int @id @default(autoincrement())
  P_ID String
  Prescription Bytes
  Follow_Up DateTime
  Measurments Bytes
  x_ray Bytes
  Scans Bytes
  Medicines_Date DateTime
  Medicines_Dose Int
  patient Patients @relation(fields: [P_ID],references: [P_ID])
}
